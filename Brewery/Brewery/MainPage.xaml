<Page
    x:Class="Brewery.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Brewery"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.DataContext>
        <Binding Path="Main" Source="{StaticResource ViewModelLocator}" />
    </Page.DataContext>
    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <RelativePanel Name="DateTimeRelativePanel" RelativePanel.AlignHorizontalCenterWithPanel="True">
            <TextBlock Name="DateTimeHeaderTextBlock" x:Uid="DateTimeHeaderTextBlock" Margin="10"/>
            <TextBlock Name="DateTimeTextBlock" RelativePanel.RightOf="DateTimeHeaderTextBlock" Margin="10" Text="{Binding DateTime}"/>
        </RelativePanel>
        <RelativePanel Name="TemperatureRelativePanel" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="DateTimeRelativePanel">
            <TextBlock Name="TemperatureHeaderTextBlock" x:Uid="TemperatureHeaderTextBlock" Margin="10"/>
            <TextBlock Name="TemperatureTextBlock" RelativePanel.RightOf="TemperatureHeaderTextBlock" Margin="10" Text="{Binding Temperature}"/>
        </RelativePanel>
        <RelativePanel Name="ButtonRelativePanel" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="TemperatureRelativePanel">
            <Button Name="MixerButton" x:Uid="MixerButton" Command="{Binding ToggleMixerCommand}"></Button>
            <TextBlock Name="MixerTextBlock" RelativePanel.RightOf="MixerButton" RelativePanel.AlignVerticalCenterWith="MixerButton" Margin="10,0,0,0" Text="{Binding MixerStatus}"></TextBlock>
        </RelativePanel>
    </RelativePanel>
</Page>