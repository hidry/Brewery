<Page
    x:Class="Brewery.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Brewery"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <RelativePanel Name="DateTimeRelativePanel" RelativePanel.AlignHorizontalCenterWithPanel="True">
            <TextBlock Name="DateTimeHeaderTextBlock" Margin="10" Text="Uhrzeit"/>
            <TextBlock Name="DateTimeTextBlock" RelativePanel.RightOf="DateTimeHeaderTextBlock" Margin="10" Text="???"/>
        </RelativePanel>
        <RelativePanel Name="TemperatureRelativePanel" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="DateTimeRelativePanel">
            <TextBlock Name="TemperatureHeaderTextBlock" Margin="10" Text="Temperatur"/>
            <TextBlock Name="TemperatureTextBlock" RelativePanel.RightOf="TemperatureHeaderTextBlock" Margin="10" Text="???"/>
        </RelativePanel>
        <RelativePanel Name="ButtonRelativePanel" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="TemperatureRelativePanel">
            <HyperlinkButton Name="MixerHyperlinkButton" Click="MixerHyperlinkButton_Click">Rührwerk</HyperlinkButton>
            <TextBlock Name="MixerTextBlock" RelativePanel.RightOf="MixerHyperlinkButton" RelativePanel.AlignVerticalCenterWith="MixerHyperlinkButton" Margin="10,0,0,00">Aus</TextBlock>
        </RelativePanel>
    </RelativePanel>
</Page>